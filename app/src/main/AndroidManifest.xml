<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asus.music_storm_android">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.noActionBar">
        <activity
            android:name=".atys.PersonalCenterActivity"
            android:label="@string/title_activity_personal_center"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|navigation"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.noActionBar"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".atys.ResultActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name=".atys.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".atys.ListenActivity"
            android:label="@string/title_activity_listen"
            android:theme="@style/AppTheme.noActionBar" />
        <activity android:name=".atys.VerifyActivity" />
        <activity
            android:name=".atys.PublishActivity"
            android:label="@string/title_activity_publish"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name=".atys.CommentActivity"
            android:label="@string/title_activity_comment"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name=".atys.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.noActionBar"></activity>
    </application>

</manifest>